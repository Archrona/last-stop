{
    "group": "universal",
    
    "commands": [
        {
            "spoken": ["stop", "nop", "please"],
            "run": "nop"
        },
        {
            "spoken": ["step"],
            "run": "step",
            "arguments": ["1"]
        },
        {
            "spoken": ["jump"],
            "run": "step",
            "arguments": ["2"]
        },
        {
            "spoken": ["leap", "hurdle"],
            "run": "step",
            "arguments": ["3"]
        },

        {
            "spoken": ["step all", "step everything"],
            "run": "stepAll",
            "arguments": []
        },

        {
            "spoken": ["go $location"],
            "run": "go",
            "arguments": ["$1"]
        },
        {
            "spoken": ["go everything", "go everywhere"],
            "run": "selectAll", 
            "arguments": []
        },


        {
            "spoken": ["yank that", "yanks that", "yanked that"],
            "run": "cut",
            "arguments": []
        },
        {
            "spoken": ["grab that", "grabs that", "grabbed that", "grabbing that"],
            "run": "copy",
            "arguments": []
        },
        {
            "spoken": ["spit that", "spits that", "spitz that", "spitted that"],
            "run": "paste", 
            "arguments": []
        },

        {
            "spoken": ["grab everything"],
            "run": "selectAllAndCopy", 
            "arguments": []
        },
        {
            "spoken": ["yank everything"],
            "run": "selectAllAndCut", 
            "arguments": []
        },

        {
            "spoken": ["sponge"],
            "run": "sponge",
            "arguments": ["ud"]
        },
        {
            "spoken": ["sponge left"],
            "run": "sponge",
            "arguments": ["l"]
        },
        {
            "spoken": ["sponge right"],
            "run": "sponge",
            "arguments": ["r"]
        },
        {
            "spoken": ["sponge above"],
            "run": "sponge",
            "arguments": ["u"]
        },
        {
            "spoken": ["sponge below"],
            "run": "sponge",
            "arguments": ["d"]
        },

        {
            "spoken": ["halo"],
            "run": "halo",
            "arguments": ["ud"]
        },
        {
            "spoken": ["dilate", "halo sides", "halo horizontal", "halo horizontally"],
            "run": "halo",
            "arguments": ["lr"]
        },

        {
            "spoken": ["halo above", "halo up"],
            "run": "halo",
            "arguments": ["u"]
        },
        {
            "spoken": ["halo below", "halo down"],
            "run": "halo",
            "arguments": ["d"]
        },
        {
            "spoken": ["halo left", "halo before"],
            "run": "halo",
            "arguments": ["l"]
        },
        {
            "spoken": ["halo right", "halo after"],
            "run": "halo",
            "arguments": ["r"]
        },

        {
            "spoken": ["chop above $location"],
            "run": "insertBetweenLines",
            "arguments": ["above", "$1"]
        },
        {
            "spoken": ["chop $location", "chop below $location"],
            "run": "insertBetweenLines",
            "arguments": ["below", "$1"]
        },

        {
            "spoken": ["dropout", "drop out", "drop forward"],
            "insert": "$u"
        },
        {
            "spoken": ["drop in", "drop back"],
            "insert": "$d"
        },
        {
            "spoken": ["drop", "drop down"],
            "insert": "$n"
        },

        {
            "spoken": ["ok", "okay"],
            "run": "insertAtEOL",
            "arguments": ["$n"]
        },
        {
            "spoken": ["expand"],
            "insert": "$u$_$d"
        },
    
        {
            "spoken": ["blank"],
            "run": "insertExact",
            "arguments": [" "]
        },

        {
            "spoken": ["change to typescript", "change to type script", "change to java script", "change to javascript"],
            "run": "setContext",
            "arguments": ["typescript"]
        },
        {
            "spoken": ["change to text"],
            "run": "setContext",
            "arguments": ["text"]
        },
        {
            "spoken": ["change to html"],
            "run": "setContext",
            "arguments": ["html"]
        }
    ]
}