{
    "group": "universal",
    
    "commands": [
        {
            "spoken": ["stop", "nop"],
            "run": "nop"
        },
        {
            "spoken": ["step"],
            "run": "step",
            "arguments": ["1"]
        },
        {
            "spoken": ["jump"],
            "run": "step",
            "arguments": ["2"]
        },
        {
            "spoken": ["leap", "hurdle"],
            "run": "step",
            "arguments": ["3"]
        },
    
        {
            "spoken": ["go $location"],
            "run": "go",
            "arguments": ["$1"]
        },

        
        {
            "spoken": ["dropout", "drop out", "drop forward"],
            "insert": "$u"
        },
        {
            "spoken": ["drop in", "drop back"],
            "insert": "$d"
        },
        {
            "spoken": ["drop", "drop down"],
            "insert": "$n"
        },
        {
            "spoken": ["ok", "okay"],
            "run": "insertAtEOL",
            "arguments": ["$n"]
        },
        {
            "spoken": ["expand"],
            "insert": "$u$_$d"
        },
    
        {
            "spoken": ["blank"],
            "run": "insertExact",
            "arguments": [" "]
        }
    ]
}